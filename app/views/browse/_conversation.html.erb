<div class="row">
  <div class="col-12 top-bar">

    <i class="fa fa-times fa-2x text-muted float-right" id="close-conversation"></i>

    <%= link_to image_tag(@profile.images.first, width: '40px', height: '40px', class: 'profile-thumb float-left rounded-circle mr-3'), "#" %>
    <p class="text-muted mt-2">You matched with <%= @profile.first_name %> on <%= @match.created_at.strftime("%d/%m/%Y") %></p>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <% if @conversation.new_record? %>
      <div class="initiate-conversation text-center">

        <p class="mt-3">You matched with <span><%= @profile.first_name %></span> <%= time_ago_in_words @match.created_at %> ago</p>
        <%= link_to image_tag(@profile.images.first, width: '200px', height: '200px', class: 'rounded-circle mb-5 mt-3'), "#" %>
        <p>Send them a message and make them smile</p>
      </div>
    <% end %>
    <div class="conversation_messages">
      <%= render partial: "browse/messages" unless @conversation.new_record? %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12 mt-5 bottom-bar">
    <%= render partial: "browse/new_conversation" %>
  </div>
</div>
